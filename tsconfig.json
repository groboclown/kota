{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "jsx": "react",
    "sourceMap": true,
    "inlineSourceMap": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "strict": true,
    "baseUrl": "./src",
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "__jest__/*"
  ]
}
